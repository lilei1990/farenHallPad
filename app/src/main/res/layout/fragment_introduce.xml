<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal">

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/introduce_one"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginTop="10dp"
                    android:padding="@dimen/layout_dp_8"
                    fresco:failureImage="@mipmap/dating_0"
                    fresco:placeholderImage="@mipmap/dating_0"
                    fresco:placeholderImageScaleType="fitCenter"/>


                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/introduce_two"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginTop="10dp"
                    android:padding="@dimen/layout_dp_8"
                    fresco:failureImage="@mipmap/dating_1"
                    fresco:placeholderImage="@mipmap/dating_1"
                    fresco:placeholderImageScaleType="fitCenter"/>


                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/introduce_three"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="10dp"
                    android:padding="@dimen/layout_dp_8"
                    fresco:failureImage="@mipmap/dating_2"
                    fresco:placeholderImage="@mipmap/dating_2"
                    fresco:placeholderImageScaleType="fitCenter"/>
            </LinearLayout>
        </ScrollView>


    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="1.0dp"
        android:layout_height="match_parent"
        android:background="@color/black"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text=""
            android:textSize="@dimen/text_size_24"
            android:textStyle="bold"/>
    </ScrollView>

</LinearLayout>
