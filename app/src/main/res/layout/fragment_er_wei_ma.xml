<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/body_bg"
    tools:context="com.shyms.farendating.home.user_info.ErWeiMaFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/sweepIV"
            android:layout_width="300dp"
            android:layout_height="300dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_dp_32"
            android:text="二维码一分钟有效，请尽快使用"
            android:textColor="#ffff00"
            android:textSize="@dimen/text_size_24" />

        <Button
            android:id="@+id/btn_erweima"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_dp_16"
            android:gravity="center"
            android:background="@mipmap/btn_bg"
            android:text="刷新二维码"
            android:textColor="#ffffff"
            android:textSize="@dimen/text_size_24" />
    </LinearLayout>
</FrameLayout>
