<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="500dp"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_new_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/dialog_hint_qu_hao_bg"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/layout_dp_16"
        android:text="提示"
        android:textColor="#F8FBFA"
        android:textSize="@dimen/text_size_24" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingLeft="@dimen/layout_dp_32"
        android:paddingRight="@dimen/layout_dp_32"
        android:text="目前正在排队的有："
        android:textSize="@dimen/text_size_24" />

    <TextView
        android:id="@+id/tvNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/layout_dp_32"
        android:layout_marginStart="@dimen/layout_dp_32"
        android:layout_marginTop="20dp"
        android:background="@drawable/dialog_hint_qu_hao_number"
        android:gravity="center"
        android:padding="@dimen/layout_dp_16"
        android:text="15个人"
        android:textColor="@color/red"
        android:textSize="@dimen/text_size_24" />

    <TextView
        android:id="@+id/tvSystemNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingLeft="@dimen/layout_dp_32"
        android:paddingRight="@dimen/layout_dp_32"
        android:text="目前正在"
        android:textSize="@dimen/text_size_24" />

    <TextView
        android:id="@+id/tvWindowsNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/layout_dp_32"
        android:layout_marginStart="@dimen/layout_dp_32"
        android:layout_marginTop="20dp"
        android:background="@drawable/dialog_hint_qu_hao_number"
        android:gravity="center"
        android:padding="@dimen/layout_dp_16"
        android:text="15个人"
        android:textColor="@color/red"
        android:textSize="@dimen/text_size_24" />

    <LinearLayout
        android:id="@+id/llIsLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:visibility="gone"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/layout_dp_32"
            android:paddingRight="@dimen/layout_dp_32"
            android:text="手机号码:"
            android:textSize="@dimen/text_size_24" />

        <EditText
            android:id="@+id/etPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/layout_dp_32"
            android:background="@drawable/dialog_hint_qu_hao_number"
            android:gravity="center"
            android:padding="@dimen/layout_dp_16"
            android:textColor="@color/red"
            android:textSize="@dimen/text_size_24" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/layout_dp_8"
        android:layout_marginTop="@dimen/layout_dp_32">

        <TextView
            android:id="@+id/tv_dialog_end"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_marginEnd="@dimen/layout_dp_64"
            android:background="@drawable/dialog_end_selector"
            android:gravity="center"
            android:text="取消"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/text_size_22" />

        <TextView
            android:id="@+id/tv_dialog_enter"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_marginStart="@dimen/layout_dp_8"
            android:background="@drawable/dialog_enter_selector"
            android:gravity="center"
            android:text="确认"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/text_size_22" />
    </LinearLayout>
</LinearLayout>